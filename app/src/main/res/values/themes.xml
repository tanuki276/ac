    <!-- ダークテーマ -->
    <style name="Theme.NyankoWars.Dark" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_light</item>
        <item name="colorSecondary">@color/pink_primary</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="android:statusBarColor">@color/black</item>
